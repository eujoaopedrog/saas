generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Clinic {
  id       String    @id @default(uuid())
  name     String
  cnpj     String    @unique
  phone    String
  users    User[]
  patients Patient[]
}

model User {
  id        String @id @default(uuid())
  clinic_id String
  email     String @unique
  password  String
  role      String // admin, dentist, secretary
  clinic    Clinic @relation(fields: [clinic_id], references: [id])
}

model Patient {
  id          String        @id @default(uuid())
  clinic_id   String
  name        String
  phone       String
  cpf         String?
  clinic      Clinic        @relation(fields: [clinic_id], references: [id])
  budgets     Budget[]
  messageLogs MessageLogs[]
}

model Budget {
  id          String   @id @default(uuid())
  patient_id  String
  total_value Float
  status      String // NEW_LEAD, SCHEDULED, BUDGET_DELIVERED, NEGOTIATION, SOLD, LOST
  created_at  DateTime @default(now())
  patient     Patient  @relation(fields: [patient_id], references: [id])
}

model MessageLogs {
  id         String   @id @default(uuid())
  patient_id String
  direction  String // INBOUND, OUTBOUND
  content    String
  timestamp  DateTime @default(now())
  patient    Patient  @relation(fields: [patient_id], references: [id])
}
